{
  "workflow_description": {
    "name":"alignment_qc",
    "version": 1.0,
    "label":"Alignment QC",
    "type":"alignment_qc",
    "inputs":[
      "qc_reports/{sample}/raw_fastqc/*",
      "mapped/*",
      "cleaned_fastq/{sample}*fastq.gz",
      "raw_fastq/{sample}*fastq.gz"
    ],
    "outputs":[
      "qc_reports/*"
    ],
    "report_index": "qc_reports/final_alignment_report.html",
    "reports":[
       "qc_reports/*"
    ]
  },
  "general_params": [
    "library_name",
    "sample_name",
    "lib_forward_read_length",
    "lib_reverse_read_length"
  ],
  "gui_params" : {
    "detailed": {
      "count_over": {
        "label": "Count over",
        "type": "enum",
        "default": "exon",
        "list": {
          "exon": "Exon",
          "gene": "Gene",
          "transcript": "Transcript",
          "mRNA": "mRNA",
          "three_prime_utr": "Three prime UTR",
          "five_prime_utr": "Five prime UTR"
        }
      },
      "qc_samtools": {
        "label": "QC samtools",
        "type": "bool",
        "default": true
      },
      "qc_qualimap_DNA": {
        "label": "QC qualimap DNA",
        "type": "bool",
        "default": true
      },
      "qc_picard_DNA": {
        "label": "QC picard DNA",
        "type": "bool",
        "default": true
      },
      "cross_sample_correlation": {
        "label": "Cross sample correlation",
        "type": "bool",
        "default": true
      },
      "qc_dupradar_RNA": {
        "label": "QC dupradar RNA",
        "type": "bool",
        "default": true
      },
      "qc_qualimap_RNA": {
        "label": "QC qualimap RNA",
        "type": "bool",
        "default": true
      },
      "qc_picard_RNA": {
        "label": "QC picard RNA",
        "type": "bool",
        "default": true
      },
      "qc_biotypes_RNA": {
        "label": "QC biotypes RNA",
        "type": "bool",
        "default": true
      },
      "qc_fastq_screen_RNA": {
        "label": "QC fastq screen RNA",
        "type": "bool",
        "default": true
      },
      "qc_RSeQC_RNA": {
        "label": "QC RSeQC RNA",
        "type": "bool",
        "default": true
      },
      "feature_count": {
        "label": "Feature count",
        "type": "bool",
        "default": true
      },
      "RSEM_count": {
        "label": "Gene count RSEM",
        "type": "bool",
        "default": true
      },
      "max_mapped_reads_to_run_biobloom": {
        "label": "Biobloom - max mapped ratio",
        "type": "int",
        "default": 100
      }
    }
  }
}

